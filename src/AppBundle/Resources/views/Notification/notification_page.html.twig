{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block content %}
	<div class="container">
		<div class="col-lg-12 box-default box-notification">
			<h1 class="box-header">Notificaciones</h1>
			<div class="box-content">
				{% for notification in pagination %}
					<div class="col-lg-12 notification-item">
						<div class="alert alert-default">
							<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
							<!-- Sacamos el usuario del siguiente ide y lo guardamos en la variable notu  -->
							{% set notu = notification.typeId|get_user %}

							{% if notification.type  == 'follow' %}
								<a href="{{ path('user_profile', {'nickname': notu.nick}) }}">{{ notu.name }} {{ notu.surname }}</a> te esta siguiendo
							{% endif %}

							{% if notification.type  == 'like' %}
								<a href="{{ path('user_profile', {'nickname': notu.nick}) }}">{{ notu.name }} {{ notu.surname }}</a> le ha gustado una de tus publicaciones
							{% endif %}
						</div>
					</div>
				{% endfor %}
				<div class="navigation">
						{{ knp_pagination_render(pagination) }}
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
{% endblock %}